<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="@dimen/icon_64"
        android:layout_height="@dimen/icon_64"
        android:src="@drawable/ic_favorite"/>

    <TextView
        android:id="@+id/textViewSigningUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/signing_up"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/padding_16"/>

    <ProgressBar
        android:id="@+id/progressBarSigningIn"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:progressBackgroundTint="@color/colorAccent"
        android:progressTint="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/padding_32"
        android:layout_marginStart="@dimen/padding_32"
        android:layout_marginEnd="@dimen/padding_32"
        tools:visibility="visible"/>

</androidx.appcompat.widget.LinearLayoutCompat>
